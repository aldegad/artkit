rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // 사용자별 이미지 프로젝트
    match /users/{userId}/imageProjects/{projectId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // 사용자별 비디오 프로젝트
    match /users/{userId}/videoProjects/{projectId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // 사용자별 스프라이트 프로젝트
    match /users/{userId}/spriteProjects/{projectId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
